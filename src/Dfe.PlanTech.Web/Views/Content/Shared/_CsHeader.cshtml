@using Dfe.PlanTech.Application.Constants
<header role="banner">
    @{
        var homeSlug = Context.User.Identity?.IsAuthenticated == true ? UrlConstants.SelfAssessmentPage : "/";
    }
    <partial name="CookiesBanner/_CookieBanner"/>
    <div class="dfe-header">
        <div class="dfe-width-container dfe-header__container">
            <div class="dfe-header__logo">
                <a class="dfe-header__link dfe-header__link--service " href="@homeSlug" aria-label="DfE homepage">
                    <img src="/assets/images/dfe-logo.png" class="dfe-logo govuk-!-display-none-print" alt="DfE Homepage">
                    <img src="/assets/images/dfe-logo-alt.png" class="dfe-logo-hover print-only" alt="DfE Homepage">
                </a>
            </div>
        </div>
        <div class="dfe-width-container dfe-header__service-name">
            <a href="@homeSlug" class="dfe-header__link--service">Plan technology for your school</a>
        </div>
    </div>
    <partial name="Shared/_Hero" model="@Model.Heading"/>
</header>
