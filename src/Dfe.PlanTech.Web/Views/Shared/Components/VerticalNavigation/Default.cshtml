@model IEnumerable<Dfe.PlanTech.Domain.Questionnaire.Models.RecommendationChunk>

<nav class="dfe-vertical-nav">
    <h2 class="dfe-vertical-nav__theme govuk-heading-m">List of actions</h2>
    <ul class="dfe-vertical-nav__section">
        @foreach (var chunk in Model)
        {
            var classes = chunk.SlugifiedHeader == ViewData["VerticalNavigationSection"]?.ToString()
                ? "dfe-vertical-nav__section-item--active govuk-!-font-weight-bold"
                : "";

            <li class="dfe-vertical-nav__section-item @classes">
                <a class="dfe-vertical-nav__link govuk-link" href="#@chunk.SlugifiedHeader">@chunk.Header.Text</a>
            </li>
        }
    </ul>
</nav>