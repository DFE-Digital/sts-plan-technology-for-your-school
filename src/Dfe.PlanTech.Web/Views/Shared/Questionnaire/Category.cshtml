@using Dfe.PlanTech.Application.Constants
@model Dfe.PlanTech.Domain.Questionnaire.Models.Category

@{
    var pageSlug = ViewData["PageSlug"] as string;
}

@if (pageSlug == UrlConstants.GroupsDashboardSlug)
{
    await Html.RenderPartialAsync("Components/PageComponentFactory", Model.Header);

    // Invoke GroupsDashboardViewComponent for Category content when the page slug is "dashboard"
    @await Component.InvokeAsync("GroupsDashboard", new { category = Model });
}
